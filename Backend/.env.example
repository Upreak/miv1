# Database Configuration
DATABASE_URL=sqlite:///./recruitment_app.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/recruitment_db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5
SEND_OTP_VIA_SMS=false

# WhatsApp Configuration
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token
WHATSAPP_WEBHOOK_SECRET=your-whatsapp-webhook-secret
WHATSAPP_BUSINESS_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/telegram/webhook

# SMS Configuration (for production)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Email Configuration (optional fallback)
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application Configuration
APP_NAME=Recruitment Platform
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain,image/jpeg,image/png

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Environment Configuration
ENVIRONMENT=development
ALLOWED_HOSTS=*

# Logging Configuration
LOG_FILE=logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./test.db
TEST_MODE=true

# Development Configuration
DEV_MODE=true
DEV_PHONE_NUMBER=919876543210
DEV_OTP_CODE=123456

# Production Configuration (when ENVIRONMENT=production)
PRODUCTION_MODE=false
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Monitoring and Analytics
MONITORING_ENABLED=false
MONITORING_PROVIDER=datadog
DATADOG_API_KEY=your-datadog-api-key

# Backup and Recovery
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# Security Headers
SECURITY_HEADERS_ENABLED=true
SECURITY_HEADERS_CSP=default-src 'self'
SECURITY_HEADERS_XSS_PROTECTION=true
SECURITY_HEADERS_STRICT_TRANSPORT_SECURITY=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_WHITELIST=127.0.0.1,::1

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
SESSION_REFRESH_INTERVAL_MINUTES=5

# File Processing
FILE_PROCESSING_TIMEOUT_SECONDS=300
FILE_QUEUE_SIZE=100
FILE_WORKER_COUNT=4

# AI/ML Configuration
AI_PROVIDER=openai
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_KEY_PREFIX=recruitment:
CACHE_ENABLED=true

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_FILE=
SSL_KEY_FILE=